{
  "name": "cubvault",
  "version": "1.0.0",
  "description": "CubVault - Advanced Cross-Platform Password Manager by CUB Software",
  "main": "dist/desktop/main.js",
  "scripts": {
    "dev": "npm run dev:desktop",
    "dev:desktop": "concurrently \"npm run watch:desktop\" \"npm run watch:renderer\" \"wait-on dist/desktop/main.js dist/desktop/renderer/index.html && electron .\"",
    "dev:web": "webpack serve --config webpack.web.config.js",
    "watch:desktop": "webpack --config webpack.desktop.config.js --watch",
    "watch:renderer": "webpack --config webpack.renderer.config.js --watch",
    "build:desktop": "npm run build:desktop-main && npm run build:desktop-renderer && electron-builder",
    "build:desktop-main": "webpack --config webpack.desktop.config.js --mode production",
    "build:desktop-renderer": "webpack --config webpack.renderer.config.js --mode production",
    "build:web": "webpack --config webpack.web.config.js --mode production",
    "dev:extension": "webpack --config webpack.extension.config.js --watch",
    "build:extension": "webpack --config webpack.extension.config.js --mode production",
    "test": "jest"
  },
  "keywords": [
    "password-manager",
    "security",
    "encryption",
    "cross-platform"
  ],
  "author": "CUB Software",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@noble/hashes": "^1.3.3",
    "buffer": "^6.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.cubsoftware.cubvault",
    "productName": "CubVault",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    }
  }
}
